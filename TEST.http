###
# @name getJwtToken
POST http://localhost:3000/graphql HTTP/1.1
Content-Type: application/json
X-REQUEST-TYPE: GraphQL

query tokenQuery {
    generateToken {
        bearer
    }
}

###
# @name decodeJwtToken

@jwtToken = {{getJwtToken.response.body.$.data.generateToken.bearer}}

POST http://localhost:3000/graphql HTTP/1.1
Authorization: Bearer {{jwtToken}}
Content-Type: application/json
X-REQUEST-TYPE: GraphQL

query decodeTokenQuery {
    decodeToken {
        email
        iss
        iat
        exp
        sub
    }
}

###
# @name listUsers
POST http://localhost:3000/graphql HTTP/1.1
Authorization: Bearer {{jwtToken}}
Content-Type: application/json
X-REQUEST-TYPE: GraphQL

query ListUsers {
    users {
        name
        userUuid
        email
        createdAt
    }
}
